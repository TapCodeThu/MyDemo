<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activitys.SignUpActivity">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <de.hdodenhof.circleimageview.CircleImageView
              android:scaleType="centerCrop"
              android:id="@+id/logo"
              android:src="@drawable/img"
              android:layout_gravity="center"
              android:layout_marginTop="20dp"
              android:layout_width="100dp"
              android:layout_height="100dp"/>
          <TextView
              android:text="Sign Up"
              android:fontFamily="@font/intermedium"
              android:layout_gravity="center"
              android:layout_marginTop="10dp"
              android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="@color/sky"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
          <View
              android:background="@color/sky"
              android:layout_marginHorizontal="16dp"
              android:layout_width="match_parent"
              android:layout_height="2dp"/>
          <com.google.android.material.textfield.TextInputLayout
              android:layout_marginTop="10dp"
              android:hint="Gym Name"
              android:layout_marginHorizontal="16dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <com.google.android.material.textfield.TextInputEditText
                  android:id="@+id/edt_gym_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
          </com.google.android.material.textfield.TextInputLayout>
          <com.google.android.material.textfield.TextInputLayout
              android:layout_marginTop="10dp"
              android:hint="Email"
              android:layout_marginHorizontal="16dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <com.google.android.material.textfield.TextInputEditText
                  android:inputType="textEmailAddress"
                  android:id="@+id/edt_email"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
          </com.google.android.material.textfield.TextInputLayout>
          <com.google.android.material.textfield.TextInputLayout
              android:layout_marginTop="10dp"
              android:hint="Phone Number"
              android:layout_marginHorizontal="16dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <com.google.android.material.textfield.TextInputEditText
                  android:inputType="phone"
                  android:id="@+id/edt_phone"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
          </com.google.android.material.textfield.TextInputLayout>
          <com.google.android.material.textfield.TextInputLayout
              android:layout_marginTop="10dp"
              android:hint="Address"
              android:layout_marginHorizontal="16dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <com.google.android.material.textfield.TextInputEditText
                  android:id="@+id/edt_gym_address"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
          </com.google.android.material.textfield.TextInputLayout>
          <com.google.android.material.textfield.TextInputLayout
              android:layout_marginTop="10dp"
              android:hint="City"
              android:layout_marginHorizontal="16dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <com.google.android.material.textfield.TextInputEditText
                  android:id="@+id/edt_gym_city"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
          </com.google.android.material.textfield.TextInputLayout>
          <com.google.android.material.textfield.TextInputLayout
              android:layout_marginTop="10dp"
              app:passwordToggleEnabled="true"
              android:hint="Password"
              android:layout_marginHorizontal="16dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <com.google.android.material.textfield.TextInputEditText
                  android:id="@+id/edt_password"
                  android:inputType="textPassword"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
          </com.google.android.material.textfield.TextInputLayout>
          <com.google.android.material.textfield.TextInputLayout
              android:layout_marginTop="10dp"
              app:passwordToggleEnabled="true"
              android:hint="Pre-Password"
              android:layout_marginHorizontal="16dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <com.google.android.material.textfield.TextInputEditText
                  android:id="@+id/edt_pre_password"
                  android:inputType="textPassword"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
          </com.google.android.material.textfield.TextInputLayout>
          <RelativeLayout
              android:layout_marginHorizontal="16dp"
              android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:text="Upload gym logo:"
                  android:layout_alignParentStart="true"
                  android:textColor="@color/sky"
                  android:fontFamily="@font/intermedium"
                  android:textStyle="bold"
                  android:layout_centerVertical="true"
                  android:textSize="16sp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
              <androidx.constraintlayout.widget.ConstraintLayout
                  android:background="@drawable/custom_btn_signup_splash"
                  android:paddingVertical="5dp"
                  android:paddingHorizontal="10dp"
                  android:id="@+id/btn_upload"
                  android:layout_alignParentEnd="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
                  <ImageView
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      android:src="@drawable/baseline_file_upload_24"
                      android:id="@+id/icon_upload"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
                  <TextView
                      app:layout_constraintStart_toEndOf="@id/icon_upload"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      android:text="Upload"
                      android:textColor="@color/black"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>

              </androidx.constraintlayout.widget.ConstraintLayout>

          </RelativeLayout>
          <androidx.appcompat.widget.AppCompatButton
              android:layout_marginHorizontal="16dp"
              android:background="@drawable/custom_btn_signup_splash"
              android:text="Continue"
              android:textColor="@color/sky"
              android:layout_marginTop="20dp"
              android:id="@+id/btn_continue"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>


      </LinearLayout>
  </ScrollView>

</LinearLayout>